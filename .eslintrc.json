{
  // Extend the AirBnb lint config
  "extends": "airbnb",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "globalReturn": true,
      "impliedStrict": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "wp": true,
    "bp": true,
    "React": true,
    "lodash": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx"
        ]
      },
      "babel-module": {}
    }
  },
  "rules": {
    "indent": [
      "error",
      "tab"
    ],
    "react/jsx-indent": [
      "error",
      "tab"
    ],
    "react/jsx-indent-props": [
      2,
      "tab"
    ],
    "no-tabs": 0,
    "comma-dangle": 0,
    "space-in-parens": 0,
    "space-unary-ops": 0,
    "import/first": 0,
    "object-shorthand": 0,
    "array-bracket-spacing": 0,
    "react/jsx-filename-extension": [
      0
    ],
    "react/jsx-curly-spacing": [
      0
    ]
  }
}
